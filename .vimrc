syntax on                                                                     
filetype indent plugin on                                                     
set tabstop=8                                                                 
set shiftwidth=4                                                              
set softtabstop=4                                                             
set expandtab                                                                 
set textwidth=79                                                              
set colorcolumn=79                                                            
set number relativenumber                                                     
set hlsearch                                                                  
                                                                              
autocmd BufRead,BufNewFile *.md setlocal spell spelllang=nl                   
autocmd BufRead,BufNewFile *.txt setlocal spell spelllang=nl                  
                                                                              
